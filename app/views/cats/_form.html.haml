= form_for @cat do |f|
  - if @cat.errors.any?
    #error_explanation
      %h2= "#{pluralize(@cat.errors.count, "error")} prohibited this cat from being saved:"
      %ul
        - @cat.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :cat_name
    = f.text_field :cat_name
  .field
    = f.label :attachment
    = f.file_field :attachment
  .field
    =f.label :unit
    =f.select :unit_id, Unit.all.map { |u| [u.name, u.id]}
  .field
    = f.label :date
    = f.datetime_select :date
  .actions
    = f.submit 'Save'
