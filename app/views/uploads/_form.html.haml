= simple_form_for (@upload), :html => {:multipart => true}  do |f|
  = f.error_notification

  - if @upload.errors.any?
    #error_explanation
      %h2= "#{pluralize(@upload.errors.count, "error")} prohibited this upload from being saved:"
      %ul
        - @upload.errors.full_messages.each do |msg|
          %li= msg

 
  .field
    = f.label :Subtopic
    / =  @upload.title
    / =f.label :topic
    =f.select :subtopic_id, :selected => params[:subtopic_id]

    %br
    %br
  %p Upload the Question document here
  .field
    = f.label :Question
    = f.file_field :document
    %br
  %p Upload the answer document here
  .field
    = f.label :Answer
    = f.file_field :response

    %br
    %br
  %p Upload the pictures zipped folder here. (put the pictures required for both documents in the same zipped file)
  .field
    = f.label :Pictures
    = f.file_field :pictures
  %b
  .actions
    = f.submit 'Save', class: "btn btn-default"

