= form_for @course do |f|
  - if @course.errors.any?
    #error_explanation
      %h2= "#{pluralize(@course.errors.count, "error")} prohibited this course from being saved:"
      %ul
        - @course.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name

  .field
    =f.label :University
    =f.select :university_id, University.all.map { |u| [u.name, u.id] }

  / .field
  /   =f.label :Semester
  /   =f.select :semester_id, Semester.all.map { |c| [c.name, c.id] }
  .actions
    = f.submit 'Save'
