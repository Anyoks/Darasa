%h1 Year

%table.table.table-hover
  %thead
    %tr
      %th Name
      

  %tbody
    - years.each do |year|
      %tr
        %td= link_to year.year, units_path
        %td
          -if current_user && current_user.admin?
            = link_to 'Edit', edit_year_path(year)
            = link_to 'Destroy', year, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br
/ =render "semesters/table", semesters: @semesters

/ = link_to 'New year', new_year_path, class: "btn btn-primary"
