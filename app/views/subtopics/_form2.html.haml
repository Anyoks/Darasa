= simple_form_for @subtopic, :url =>  subtopic_upload_path, :method => :post, :html => {:multipart => true}  do |f|
  = f.error_notification

  - if @subtopic.errors.any?
    #error_explanation
      %h2= "#{pluralize(@subtopic.errors.count, "error")} prohibited this subtopic from being saved:"
      %ul
        - @subtopic.errors.full_messages.each do |msg|
          %li= msg

 
  .field
    = f.label :Title
    =  @subtopic.title
    =f.label :topic
    =f.select :topic_id, :selected => params[@subtopic.topic.id]

   
  .field
    = f.file_field :html

    
  .actions
    = f.submit 'Save', class: "btn btn-default"
