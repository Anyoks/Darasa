%h1 Listing answers

%table
  %thead
    %tr
      %th Answer
      %th
      %th
      %th

  %tbody
    - @answers.each do |answer|
      %tr
        -if current_user && current_user.is_moderator?
          %td= answer.answer
          %td= link_to 'Show', answer
          %td= link_to 'Edit', edit_answer_path(answer)
          %td= link_to 'Destroy', answer, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

-if current_user && current_user.is_moderator?|| current_user.is_admin?
  = link_to 'New Answer', new_answer_path
