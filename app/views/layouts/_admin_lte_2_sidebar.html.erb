<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">

  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">

    <!-- Sidebar user panel (optional) -->
    <div class="user-panel">
      <div class="pull-left image">
        <img src="/assets/user2-160x160.jpg" class="img-circle" alt="User Image" />
      </div>
      <div class="pull-left info">
        <p><%=current_user.first_name%>  <%=current_user.second_name%></p>
        <!-- Status -->
        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
      </div>
    </div>

    <!-- search form (Optional) -->
    <form action="#" method="get" class="sidebar-form">
      <div class="input-group">
        <input type="text" name="q" class="form-control" placeholder="Search..."/>
        <span class="input-group-btn">
          <button type='submit' name='search' id='search-btn' class="btn btn-flat"><i class="fa fa-search"></i></button>
        </span>
      </div>
    </form>
    <!-- /.search form -->

    <!-- Sidebar Menu -->
    <ul class="sidebar-menu">
      <li class="header">HEADER</li>
        <!-- Optionally, you can add icons to the links -->
        <% if user_signed_in? %>
          <% if current_user.is_admin? %>
              <li > <%= link_to " Topics", topics_path,  class: 'fa fa-link' %></li>
              <li> <%= link_to " Subtopics", subtopics_path, class: 'fa fa-link' %> </li>
              <li> <%= link_to " Users", user_index_path, class: 'fa fa-link' %> </li>
              <li> <%= link_to " All Questions", questions_path,  class: 'fa fa-link' %></li>

              <li class="treeview">
                <%= link_to "#", class: 'fa fa-link', data: { toggle: "dropdown"} do %>
                  Units
                  <span class="caret"></span>
                  <%- end %>
                <ul class="treeview-menu">
                  <% @units.each do |unit|%>
                    <li><%= link_to unit.name, unit %></li>
                  <% end %>
                </ul>
              </li> 

               <%else%>

                <li class="active"> <%= link_to "Topics", topics_path %> </a></li>
                <li> <%= link_to "Subtopics", subtopics_path %> </a></li>
                <li> <%= link_to "All Questions", questions_path %> </a></li>
                <li class="dropdown">
                  <%= link_to "#", data: { toggle: "dropdown"} do %>
                    Units
                    <span class="caret"></span>
                    <%- end %>
                  <ul class="dropdown-menu">
                    <% @units.each do |unit|%>
                      <li><%= link_to unit.name, unit %></li>
                      <% end %>
                  </ul>
                </li> 
            
              <%end%>
        <%end%>
      <!-- <li><a href="#"><i class='fa fa-link'></i> <span>Another Link</span></a></li>
      <li class="treeview">
        <a href="#"><i class='fa fa-link'></i> <span>Multilevel</span> <i class="fa fa-angle-left pull-right"></i></a>
        <ul class="treeview-menu">
          <li><a href="#">Link in level 2</a></li>
          <li><a href="#">Link in level 2</a></li>
        </ul>
      </li> -->
    </ul><!-- /.sidebar-menu -->
  </section>
  <!-- /.sidebar -->
</aside>
